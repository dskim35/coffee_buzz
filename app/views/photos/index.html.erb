<div class="page-header">
  <h1>
    Photos
    <a href="/photos/new" class="btn btn-lg btn-success">New Photo</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Photo url</th>
        <th>Shop</th>
        <th>Review</th>
        <th>Actions</th>
      </tr>

      <% @photos.each do |photo| %>
      <tr>


        <div class="panel panel-default">
          <div class="panel-heading">
            <%= time_ago_in_words(photo.created_at) %>
            <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show</a>
            <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          </div>
          <div class="panel-body">
            <a href="/photos/<%= photo.photo_url %>">
              <img src="<%= photo.photo_url %>" width="700">
            </a>
          </div>
        </div>



        <td><%= photo.photo_url %></td>
        <td><%= photo.shop_id %></td>
        <td><%= photo.review_id %></td>
        <td>
          </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
